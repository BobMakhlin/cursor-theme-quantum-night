{
  // ===== THEME & ICONS =====
  "workbench.colorTheme": "Darcula",
  "workbench.iconTheme": "material-icon-theme",

  // ===== GLOBAL UI HACKER VIBES =====
  "window.commandCenter": true,
  "workbench.layoutControl.enabled": true,

  // ===== EDITOR FONT – CRISP & MODERN =====
  "editor.fontFamily": "JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.lineHeight": 21,
  "editor.fontLigatures": true,
  "editor.fontWeight": "600",

  // ===== EDITOR LOOK & FEEL =====
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "expand",           // more "alive" cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.roundedSelection": true,
  "editor.renderWhitespace": "selection",
  "editor.renderControlCharacters": false,
  "editor.scrollBeyondLastLine": true,
  "editor.detectIndentation": false,
  "editor.renderLineHighlight": "all",         // subtle glow on current line
  "editor.lineDecorationsWidth": 2,

  "editor.inlayHints.enabled": "off",
  "editor.foldingHighlight": true,
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": true,

  // Brackets & guides
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.highlightActiveBracketPair": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.rulers": [100, 140],

  // ===== EXPLORER / PROJECT VIEW =====
  "explorer.compactFolders": false,
  "explorer.autoReveal": false,
  "workbench.sideBar.location": "left",
  "workbench.tree.indent": 14,
  "explorer.decorations.colors": true,
  "explorer.decorations.badges": true,
  "explorer.sortOrder": "type",

  // ===== VUE-AWARE FILE NESTING =====
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    // Vue SFC companions
    "*.vue": "${capture}.spec.ts, ${capture}.test.ts, ${capture}.stories.ts, ${capture}.cy.ts",

    // Composables with their tests
    "use*.ts": "${capture}.spec.ts, ${capture}.test.ts",

    // Store files (Pinia pattern)
    "*.store.ts": "${capture}.store.spec.ts",

    // Config file nesting
    "vite.config.ts": "vite.config.*.ts, vitest.config.ts, vitest.config.*.ts, env.d.ts",
    "nuxt.config.ts": "nuxt.config.*.ts, app.config.ts",
    "package.json": "package-lock.json, pnpm-lock.yaml, yarn.lock, .npmrc, .nvmrc, .node-version",
    "tsconfig.json": "tsconfig.*.json, tsconfig.app.json, tsconfig.node.json, tsconfig.vitest.json",
    ".eslintrc.cjs": ".eslintrc.js, .eslintrc.json, .eslintignore, eslint.config.js, eslint.config.mjs",
    ".prettierrc": ".prettierrc.json, .prettierrc.js, .prettierignore",
    "tailwind.config.js": "tailwind.config.ts, postcss.config.js, postcss.config.cjs",

    // Index barrel files
    "index.ts": "index.spec.ts, index.test.ts",
    "index.vue": "index.spec.ts, index.test.ts"
  },

  // ===== TABS & LAYOUT =====
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.enablePreview": true,
  "workbench.editor.labelFormat": "short",
  "breadcrumbs.enabled": true,
  "workbench.statusBar.visible": true,
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.focusRecentEditorAfterClose": true,
  "workbench.editor.centeredLayoutAutoResize": true,

  // ===== ZEN / FOCUS MODE =====
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": true,
  "zenMode.hideStatusBar": false,

  // ===== TERMINAL =====
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.cursorStyle": "block",

  // ===== QUALITY OF LIFE =====
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": false,
  "editor.wordWrap": "off",

  // ===== VUE / TS / JS – CONSISTENT INDENT =====
  "[vue]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "Vue.volar"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[html]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[scss]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[css]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // ===== INLINE ERROR "GLOW" (needs Error Lens extension) =====
  "errorLens.enabled": true,
  "errorLens.fontWeight": "500",
  "errorLens.statusBarIconEnabled": false,
  "errorLens.margin": "80px",

  // ===== VUE-INSPIRED COLOR PALETTE (TOKYO-NIGHT-ish) =====
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      // Keywords - Vue emerald green
      {
        "scope": ["keyword", "storage.type", "storage.modifier"],
        "settings": {
          "foreground": "#42b883"
        }
      },
      // Vue directives (v-if, v-for, v-model, etc.)
      {
        "scope": [
          "entity.other.attribute-name.directive",
          "entity.other.attribute-name.html.vue"
        ],
        "settings": {
          "foreground": "#00dc82",
          "fontStyle": "italic"
        }
      },
      // Variables - soft cyan
      {
        "scope": ["variable", "entity.name.variable", "variable.other.readwrite"],
        "settings": {
          "foreground": "#7dcfff"
        }
      },
      // Reactive refs/computed - highlight special
      {
        "scope": ["variable.other.constant"],
        "settings": {
          "foreground": "#bb9af7"
        }
      },
      // Strings - warm amber
      {
        "scope": ["string", "constant.other.symbol", "string.quoted"],
        "settings": {
          "foreground": "#e0af68"
        }
      },
      // Template literals - slightly different
      {
        "scope": ["string.template", "punctuation.definition.string.template"],
        "settings": {
          "foreground": "#9ece6a"
        }
      },
      // Functions - clean blue
      {
        "scope": ["entity.name.function", "support.function", "meta.function-call"],
        "settings": {
          "foreground": "#7aa2f7"
        }
      },
      // Classes/Types - pink accent
      {
        "scope": ["entity.name.type", "entity.name.type.class", "support.class", "support.type"],
        "settings": {
          "foreground": "#f7768e"
        }
      },
      // Interfaces & type aliases
      {
        "scope": ["entity.name.type.interface", "entity.name.type.alias"],
        "settings": {
          "foreground": "#ff9e64"
        }
      },
      // Vue template tags - bright teal
      {
        "scope": [
          "entity.name.tag",
          "meta.tag",
          "punctuation.definition.tag"
        ],
        "settings": {
          "foreground": "#41b883"
        }
      },
      // Component tags (PascalCase) - special highlight
      {
        "scope": ["entity.name.tag.component", "support.class.component.vue"],
        "settings": {
          "foreground": "#00dc82",
          "fontStyle": "bold"
        }
      },
      // HTML attributes
      {
        "scope": ["entity.other.attribute-name"],
        "settings": {
          "foreground": "#bb9af7"
        }
      },
      // Vue event handlers (@click, @input)
      {
        "scope": ["entity.other.attribute-name.event"],
        "settings": {
          "foreground": "#f7768e",
          "fontStyle": "italic"
        }
      },
      // Vue slots
      {
        "scope": ["entity.other.attribute-name.slot"],
        "settings": {
          "foreground": "#ff9e64"
        }
      },
      // Comments - muted but readable
      {
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "foreground": "#565f89",
          "fontStyle": "italic"
        }
      },
      // Numbers
      {
        "scope": ["constant.numeric"],
        "settings": {
          "foreground": "#ff9e64"
        }
      },
      // Boolean/null
      {
        "scope": ["constant.language.boolean", "constant.language.null", "constant.language.undefined"],
        "settings": {
          "foreground": "#ff9e64"
        }
      },
      // Object keys
      {
        "scope": ["meta.object-literal.key", "support.type.property-name"],
        "settings": {
          "foreground": "#73daca"
        }
      },
      // Decorators (@Component, etc.)
      {
        "scope": ["meta.decorator", "punctuation.decorator"],
        "settings": {
          "foreground": "#bb9af7",
          "fontStyle": "italic"
        }
      },
      // Import/export
      {
        "scope": ["keyword.control.import", "keyword.control.export", "keyword.control.from"],
        "settings": {
          "foreground": "#7dcfff"
        }
      },
      // Operators
      {
        "scope": ["keyword.operator"],
        "settings": {
          "foreground": "#89ddff"
        }
      },
      // Punctuation - subtle
      {
        "scope": ["punctuation"],
        "settings": {
          "foreground": "#a9b1d6"
        }
      },
      // CSS/SCSS in Vue SFC
      {
        "scope": ["source.css.scss", "meta.property-name.scss"],
        "settings": {
          "foreground": "#7dcfff"
        }
      },
      // CSS properties
      {
        "scope": ["support.type.property-name.css"],
        "settings": {
          "foreground": "#73daca"
        }
      },
      // CSS values
      {
        "scope": ["support.constant.property-value.css"],
        "settings": {
          "foreground": "#bb9af7"
        }
      },
      // :deep(), :slotted(), :global() - Vue scoped styles
      {
        "scope": ["entity.other.attribute-name.pseudo-class"],
        "settings": {
          "foreground": "#00dc82",
          "fontStyle": "italic"
        }
      }
    ]
  },

  // ===== VUE-SPECIFIC ASSOCIATIONS =====
  "files.associations": {
    "*.vue": "vue"
  },

  // ===== EMMET FOR VUE =====
  "emmet.includeLanguages": {
    "vue": "html",
    "vue-html": "html"
  },

  // ===== VUE / NUXT HACKER UI TWEAKS (TOP BAR, TABS, CURSOR) =====
  "workbench.colorCustomizations": {
    "[Darcula]": {
      // Activity bar
      "activityBar.background": "#050814",
      "activityBar.foreground": "#e5e7eb",
      "activityBarBadge.background": "#42b883",
      "activityBarBadge.foreground": "#020617",

      // Side bar
      "sideBar.background": "#050816",
      "sideBar.foreground": "#9ca3af",

      // Tabs
      "tab.activeBackground": "#020617",
      "tab.activeBorderTop": "#42b883",
      "tab.activeForeground": "#e5e7eb",
      "tab.inactiveBackground": "#020617",
      "tab.inactiveForeground": "#6b7280",
      "tab.unfocusedActiveBorderTop": "#334155",

      // Status bar
      "statusBar.background": "#020617",
      "statusBar.foreground": "#e5e7eb",
      "statusBar.noFolderBackground": "#020617",
      "statusBar.debuggingBackground": "#00dc82",
      "statusBar.debuggingForeground": "#020617",

      // Editor core
      "editor.lineHighlightBackground": "#111827",
      "editorLineNumber.foreground": "#4b5563",
      "editorLineNumber.activeForeground": "#e5e7eb",
      "editorCursor.foreground": "#00dc82",
      "editor.selectionBackground": "#1e293b",
      "editorIndentGuide.background1": "#111827",
      "editorIndentGuide.activeBackground1": "#374151",

      // Diff / git
      "editorGutter.addedBackground": "#16a34a",
      "editorGutter.modifiedBackground": "#22c55e",
      "editorGutter.deletedBackground": "#ef4444"
    }
  }
}
