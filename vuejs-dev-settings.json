{
    // ===== THEME & ICONS =====
    "workbench.colorTheme": "Darcula",
    "workbench.iconTheme": "material-icon-theme",

    // ===== GLOBAL UI HACKER VIBES =====
    "window.commandCenter": true,
    "workbench.layoutControl.enabled": true,

    // ===== EDITOR FONT â€“ CRISP & MODERN =====
    "editor.fontFamily": "JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 12,
    "editor.lineHeight": 21,
    "editor.fontLigatures": true,
    "editor.fontWeight": "600",

    // ===== EDITOR LOOK & FEEL =====
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "expand",           // more "alive" cursor
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "editor.roundedSelection": true,
    "editor.renderWhitespace": "selection",
    "editor.renderControlCharacters": false,
    "editor.scrollBeyondLastLine": true,
    "editor.detectIndentation": false,
    "editor.renderLineHighlight": "all",         // subtle glow on current line
    "editor.lineDecorationsWidth": 2,

    "editor.inlayHints.enabled": "off",
    "editor.foldingHighlight": true,
    "editor.occurrencesHighlight": "singleFile",
    "editor.selectionHighlight": true,

    // Brackets & guides
    "editor.guides.indentation": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.highlightActiveBracketPair": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.rulers": [100, 140],

    // ===== EXPLORER / PROJECT VIEW =====
    "explorer.compactFolders": false,
    "explorer.autoReveal": false,
    "workbench.sideBar.location": "left",
    "workbench.tree.indent": 14,
    "explorer.decorations.colors": true,
    "explorer.decorations.badges": true,
    "explorer.sortOrder": "type",

    // ===== VUE-AWARE FILE NESTING =====
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
      // Vue SFC companions
      "*.vue": "${capture}.spec.ts, ${capture}.test.ts, ${capture}.stories.ts, ${capture}.cy.ts",

      // Composables with their tests
